// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

////////////////////////////////////////////////////////////////////////////////
// 0. ENUMS
////////////////////////////////////////////////////////////////////////////////

enum ProductLifecycleStage {
  DEMANDE_IDEATION
  EVALUATION_COUT_POTENTIEL
  PROTOTYPAGE
  MISE_EN_FONCTION_DEVELOPPEMENT
  PLANIFICATION_PRODUIT_FINI
  MISE_EN_MARCHE
  VIE_DU_PRODUIT
}

enum Reporter {
  expert
  transporteur
  autre
}

enum Cause {
  production
  pompe
  autre_cause
  exposition_sinto
  transporteur
  autre
}

enum ReturnStatus {
  draft
  awaiting_physical
  received_or_no_physical
}

////////////////////////////////////////////////////////////////////////////////
// 1. AUTH / USERS  (schema: public)
////////////////////////////////////////////////////////////////////////////////

model User {
  id                   String    @id @default(cuid())
  name                 String?
  firstName            String?   @map("first_name")
  lastName             String?   @map("last_name")
  email                String?   @unique
  emailVerified        DateTime? @map("email_verified")
  image                String?
  password             String?
  role                 String    @default("user")
  verificationToken    String?   @unique @map("verification_token")
  passwordResetToken   String?   @unique @map("password_reset_token")
  passwordResetExpires DateTime? @map("password_reset_expires")
  createdAt            DateTime  @default(now()) @map("created_at")
  updatedAt            DateTime  @updatedAt      @map("updated_at")

  accounts Account[]
  sessions Session[]
  tenants  UserTenant[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  ext_expires_in    Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

////////////////////////////////////////////////////////////////////////////////
// 2. MULTI-TENANCY  (schema: public)
////////////////////////////////////////////////////////////////////////////////

model Tenant {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt      @map("updated_at")

  users           UserTenant[]
  projects        Project[]
  sharePointNodes SharePointNode[]

  @@map("tenants")
}

model UserTenant {
  userId    String
  tenantId  String
  role      String?
  createdAt DateTime @default(now()) @map("created_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@id([userId, tenantId])
  @@map("user_tenants")
}

model Project {
  id        String                 @id @default(uuid())
  name      String
  stage     ProductLifecycleStage
  tenantId  String
  createdAt DateTime               @default(now()) @map("created_at")
  updatedAt DateTime               @updatedAt      @map("updated_at")

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@map("projects")
}

model SharePointNode {
  id           String   @id @default(cuid())
  tenantId     String
  parentId     String?
  name         String
  type         String   @default("folder")
  icon         String?
  restricted   Boolean  @default(false)
  highSecurity Boolean  @default(false)
  editGroups   String[] @default([])
  readGroups   String[] @default([])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  tenant   Tenant          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  parent   SharePointNode? @relation("SPChildren", fields: [parentId], references: [id], onDelete: Cascade)
  children SharePointNode[] @relation("SPChildren")

  @@index([tenantId])
  @@index([tenantId, parentId])
  @@map("sharepoint_nodes")
}

////////////////////////////////////////////////////////////////////////////////
// 3. RETURNS DOMAIN  (schema: public)
////////////////////////////////////////////////////////////////////////////////

model Return {
  id            Int           @id @default(autoincrement())
  code          String        @unique
  reportedAt    DateTime      @default(now())
  reporter      Reporter
  cause         Cause
  expert        String
  client        String
  noClient      String?
  noCommande    String?
  tracking      String?
  status        ReturnStatus  @default(draft)
  standby       Boolean       @default(false)
  amount        Decimal?      @db.Decimal(12, 2)
  dateCommande  DateTime?
  transport     String?
  description   String?

  createdByName String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  products    ReturnProduct[]
  attachments Upload[]

  @@index([reportedAt])
  @@index([status])
  @@index([noCommande])
  @@map("returns")
}

model ReturnProduct {
  id                 Int     @id @default(autoincrement())
  returnId           Int
  codeProduit        String
  descriptionProduit String
  descriptionRetour  String?
  quantite           Int     @default(1)

  return Return @relation(fields: [returnId], references: [id], onDelete: Cascade)

  @@index([returnId])
  @@index([codeProduit])
  @@map("return_products")
}

model Upload {
  id        Int      @id @default(autoincrement())
  returnId  Int
  name      String
  url       String
  createdAt DateTime @default(now())

  return Return @relation(fields: [returnId], references: [id], onDelete: Cascade)

  @@index([returnId])
  @@map("uploads")
}

////////////////////////////////////////////////////////////////////////////////
// 4. PREXTRA REPLICAS (READ-ONLY)  (schema: public)
////////////////////////////////////////////////////////////////////////////////
// If your DMS created different names (quoted MixedCase), adjust @@map.

model Items {
  itemid   Int     @id
  itemcode String  @db.VarChar(64)
  descr    String? @db.VarChar(255)

  @@index([itemcode])
  @@map("items")
}

model Itemsite {
  itemsiteid Int  @id
  itemid     Int
  siteid     Int
  qtyonhand  Int?
  locid      Int?

  @@index([itemid, siteid])
  @@map("itemsite")
}

model Locations {
  locid Int    @id
  name  String @db.VarChar(128)

  @@map("locations")
}

model SOHeader {
  id        Int       @id @default(autoincrement())
  sonbr     String    @unique
  orderdate DateTime
  totalamt  Decimal?  @db.Decimal(12, 2)
  custid    Int?
  carrid    Int?
  srid      Int?

  @@map("soheader")
}

model Customers {
  custid   Int    @id
  custcode String @db.VarChar(64)
  name     String @db.VarChar(255)

  @@map("customers")
}

model Carriers {
  carrid Int    @id
  name   String @db.VarChar(255)

  @@map("carriers")
}

model Salesrep {
  srid Int    @id
  name String @db.VarChar(255)

  @@map("salesrep")
}

model ShipmentHdr {
  id      Int    @id @default(autoincrement())
  sonbr   String
  waybill String?

  @@index([sonbr])
  @@map("shipmenthdr")
}

model Sites {
  id   Int    @id @default(autoincrement())
  name String @db.VarChar(255)

  @@map("sites")
}
