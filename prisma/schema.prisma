// ───────────────────────────────────────────────────────────────────────────────
// Prisma / NextAuth schema
// Works with PostgreSQL 15+
// ───────────────────────────────────────────────────────────────────────────────

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

////////////////////////////////////////////////////////////////////////////////
// 1. USER                                                                     //
////////////////////////////////////////////////////////////////////////////////
model User {
  // ─── Core identity ────────────────────────────────────────────────────────
  id                String   @id @default(cuid())      // cuid() → string‑safe for OAuth
  name              String?                           // Display name from OAuth
  firstName         String?  @map("first_name")
  lastName          String?  @map("last_name")
  email             String?  @unique                  // Must stay nullable for OAuth‑only users
  emailVerified     DateTime?@map("email_verified")
  image             String?                           // Avatar URL

  // ─── Authentication & authorisation ───────────────────────────────────────
  password          String?                           // For credentials‑auth path
  role              String   @default("user")         // "user" | "admin" | …

  // ─── Custom flows ─────────────────────────────────────────────────────────
  verificationToken String?  @unique @map("verification_token")
  passwordResetToken   String?   @unique @map("password_reset_token")
  passwordResetExpires DateTime? @map("password_reset_expires")

  // ─── Book‑keeping ─────────────────────────────────────────────────────────
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt      @map("updated_at")

  // ─── Relations (NextAuth adapter) ─────────────────────────────────────────
  accounts          Account[]
  sessions          Session[]

  @@map("users")
}

////////////////////////////////////////////////////////////////////////////////
// 2. ACCOUNT  (OAuth accounts)                                                //
////////////////////////////////////////////////////////////////////////////////
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")

  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")

  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  // ─── Relations ────────────────────────────────────────────────────────────
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

////////////////////////////////////////////////////////////////////////////////
// 3. SESSION  (NextAuth sessions)                                            //
////////////////////////////////////////////////////////////////////////////////
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

////////////////////////////////////////////////////////////////////////////////
// 4. VERIFICATION TOKEN  (NextAuth e‑mail / magic‑link tokens)               //
////////////////////////////////////////////////////////////////////////////////
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

/*
────────────────────────────────────────────────────────────────────────────────
Why this compiles now
────────────────────────────────────────────────────────────────────────────────
•  `verificationToken` was added as a **unique** field on User, so
   `prisma.user.findUnique({ where: { verificationToken: token } })`
   is legal TypeScript again.
•  Each model has @@map() to keep snake_case table names consistent.
•  All relations include `onDelete: Cascade` to mirror NextAuth defaults.
────────────────────────────────────────────────────────────────────────────────
Migrate locally:
  npx prisma migrate dev --name add_verification_token
Deploy on the bastion / staging / prod:
  npx prisma migrate deploy
────────────────────────────────────────────────────────────────────────────────
*/
