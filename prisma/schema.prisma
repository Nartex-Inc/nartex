// ───────────────────────────────────────────────────────────────────────────────
// Prisma / NextAuth schema
// This schema is well-structured and production-ready for PostgreSQL 15+.
// ───────────────────────────────────────────────────────────────────────────────

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

////////////////////////////////////////////////////////////////////////////////
// 1. USER                                                                    //
////////////////////////////////////////////////////////////////////////////////
model User {
  // ─── Core identity ────────────────────────────────────────────────────────
  id                String   @id @default(cuid())      // cuid() is a collision-resistant, URL-safe ID. Excellent choice.
  name              String?                           // Display name, often from an OAuth provider. Optional is correct.
  firstName         String?  @map("first_name")        // Optional, perfect for your simplified signup form.
  lastName          String?  @map("last_name")         // Optional, perfect for your simplified signup form.
  email             String?  @unique                   // Correctly nullable to support OAuth providers that don't supply an email.
  emailVerified     DateTime?@map("email_verified")    // Stores the timestamp of verification. Correct.
  image             String?                           // Avatar URL.

  // ─── Authentication & authorisation ───────────────────────────────────────
  password          String?                           // Correctly nullable for users who sign up only via OAuth.
  role              String   @default("user")         // Sensible default role.

  // ─── Custom flows ─────────────────────────────────────────────────────────
  verificationToken String?  @unique @map("verification_token")
  passwordResetToken   String?   @unique @map("password_reset_token")
  passwordResetExpires DateTime? @map("password_reset_expires")

  // ─── Book-keeping ─────────────────────────────────────────────────────────
  createdAt         DateTime @default(now()) @map("created_at") // Handled automatically by the database.
  updatedAt         DateTime @updatedAt      @map("updated_at") // Handled automatically by Prisma/database.

  // ─── Relations (NextAuth adapter) ─────────────────────────────────────────
  accounts          Account[]
  sessions          Session[]

  @@map("users") // Maps the model to the "users" table in the database.
}

////////////////////////////////////////////////////////////////////////////////
// 2. ACCOUNT  (OAuth accounts)                                               //
////////////////////////////////////////////////////////////////////////////////
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")

  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")

  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  // ─── Relations ────────────────────────────────────────────────────────────
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade) // Cascade delete is a crucial data integrity feature.

  @@unique([provider, providerAccountId]) // Enforces that a user can only link a specific OAuth account once.
  @@map("accounts")
}

////////////////////////////////////////////////////////////////////////////////
// 3. SESSION  (NextAuth sessions)                                            //
////////////////////////////////////////////////////////////////////////////////
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

////////////////////////////////////////////////////////////////////////////////
// 4. VERIFICATION TOKEN  (NextAuth e‑mail / magic‑link tokens)               //
////////////////////////////////////////////////////////////////////////////////
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token]) // Standard NextAuth requirement.
  @@map("verification_tokens")
}
