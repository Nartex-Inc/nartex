generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

////////////////////////////////////////////////////////////////////////////////
// 1. USER                                                                    ///
////////////////////////////////////////////////////////////////////////////////
model User {
  // ─── Core identity ────────────────────────────────────────────────────────
  id                String   @id @default(cuid())
  name              String?
  firstName         String?  @map("first_name")
  lastName          String?  @map("last_name")
  email             String?  @unique
  emailVerified     DateTime?@map("email_verified")
  image             String?

  // ─── Authentication & authorisation ───────────────────────────────────────
  password          String?
  role              String   @default("user")

  // ─── Custom flows ─────────────────────────────────────────────────────────
  verificationToken   String?  @unique @map("verification_token")
  passwordResetToken  String?  @unique @map("password_reset_token")
  passwordResetExpires DateTime? @map("password_reset_expires")

  // ─── Book-keeping ─────────────────────────────────────────────────────────
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt      @map("updated_at")

  // ─── Relations ────────────────────────────────────────────────────────────
  accounts          Account[]
  sessions          Session[]
  tenants           UserTenant[] // Added for multi-tenancy support

  @@map("users")
}

////////////////////////////////////////////////////////////////////////////////
// 2. ACCOUNT  (OAuth accounts)                                               //
////////////////////////////////////////////////////////////////////////////////
model Account {
  id                 String  @id @default(cuid())
  userId             String  @map("user_id")

  type               String
  provider           String
  providerAccountId  String  @map("provider_account_id")  // Stores 'sub' from Azure AD

  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  // THIS IS THE NEWLY ADDED FIELD
  ext_expires_in     Int?

  // ─── Relations ────────────────────────────────────────────────────────────
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([providerAccountId])  // Added for faster Azure AD lookups
  @@map("accounts")
}

////////////////////////////////////////////////////////////////////////////////
// 3. SESSION  (NextAuth sessions)                                            //
////////////////////////////////////////////////////////////////////////////////
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

////////////////////////////////////////////////////////////////////////////////
// 4. VERIFICATION TOKEN  (NextAuth tokens)                                   //
////////////////////////////////////////////////////////////////////////////////
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

////////////////////////////////////////////////////////////////////////////////
// 5. TENANT (New model for multi-tenancy)                                    //
////////////////////////////////////////////////////////////////////////////////
model Tenant {
  id        String      @id @default(uuid())
  name      String      // e.g., company name like "Nartex" or "Sinto"
  createdAt DateTime    @default(now()) @map("created_at")
  updatedAt DateTime    @updatedAt      @map("updated_at")

  // ─── Relations ────────────────────────────────────────────────────────────
  users     UserTenant[]
  projects  Project[]   // Example: Relation to tenant-scoped models (add similar for Task, ProductRequest, etc.)

  @@map("tenants")
}

////////////////////////////////////////////////////////////////////////////////
// 6. USER_TENANT (Join model for many-to-many User-Tenant relation)          //
////////////////////////////////////////////////////////////////////////////////
model UserTenant {
  userId    String
  tenantId  String
  role      String?     // Optional: e.g., "ADMIN", "MEMBER" for per-tenant permissions
  createdAt DateTime    @default(now()) @map("created_at")

  // ─── Relations ────────────────────────────────────────────────────────────
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant    Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@id([userId, tenantId])
  @@map("user_tenants")
}

////////////////////////////////////////////////////////////////////////////////
// 7. PROJECT (Example tenant-scoped model; adapt or add others as needed)    //
////////////////////////////////////////////////////////////////////////////////
model Project {
  id        String               @id @default(uuid())
  name      String
  stage     ProductLifecycleStage // Assuming enum from your app (define if needed)
  // Add other fields as per your application (e.g., description, dueDate, etc.)

  tenantId  String
  createdAt DateTime             @default(now()) @map("created_at")
  updatedAt DateTime             @updatedAt      @map("updated_at")

  // ─── Relations ────────────────────────────────────────────────────────────
  tenant    Tenant               @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@map("projects")
}

// Example enum for Project stage (based on your earlier code; define as needed)
enum ProductLifecycleStage {
  DEMANDE_IDEATION
  EVALUATION_COUT_POTENTIEL
  PROTOTYPAGE
  MISE_EN_FONCTION_DEVELOPPEMENT
  PLANIFICATION_PRODUIT_FINI
  MISE_EN_MARCHE
  VIE_DU_PRODUIT
}
